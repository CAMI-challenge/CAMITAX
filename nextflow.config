manifest {
	author = 'Andreas Bremges'
    homePage = 'https://github.com/abremges/CAMITAX'
    description = 'Taxon labels for microbial genomes'
}
docker {
	enabled = true
}
process {
	$barrnap {
		container = 'quay.io/biocontainers/barrnap:0.8--0'
	}
	$bedtools {
		container = 'quay.io/biocontainers/bedtools:2.27.1--1'
	}
	$centrifuge {
		container = 'quay.io/biocontainers/centrifuge:1.0.3--py36pl5.22.0_2'
	}
	$dada2 {
		container = 'quay.io/biocontainers/bioconductor-dada2:1.6.0--r3.4.1_0'
	}
	$prodigal {
		container = 'quay.io/biocontainers/prodigal:2.6.3--0'
	}
}
